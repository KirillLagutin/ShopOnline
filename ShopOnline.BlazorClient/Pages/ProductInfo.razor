@page "/ProductInfo/{Id:int}"

@inject IToastService ToastService
@inject IShopClient ShopClient

<PageTitle>Product Info</PageTitle>

@if (Product != null)
{
    <h3 class="mb-5">Product Information</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImageUrl">
        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4">
                <b>
                    @Product.Price.ToString("C")&nbsp;
                    (@Product.Quantity items in stock)
                </b>
            </p>
            <div>
                <button class="btn btn-primary"
                        @onclick="@(() => AddProductToCart(Product))">
                    <b>Add to cart</b>
                </button>
            </div>
        </div>
    </div>
}
else
{
    <h3 class="mb-5">Product out of stock</h3>
}


@code {

    [Parameter]
    public int Id { get; set; }

    private Product Product { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Product = await ShopClient.GetProduct(Id);
    }
    
    // Button Buy
    private void AddProductToCart(Product product)
    {
        ShopClient.AddToCart(new CartItem());
        
        ToastService.ShowInfo(
            $"Add to cart product: {product.Name}");
    }
}