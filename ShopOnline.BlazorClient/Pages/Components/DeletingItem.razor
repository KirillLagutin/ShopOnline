@using ShopOnline.Domain.Entities

<a href="/ProductInfo/@Product?.Id">
    <div class="card">
        <img class="img-thumbnail" src="@Product?.ImageUrl" alt=""/>
        <div class="card-body">
            <h5 class="card-title mb-3">
                @Product?.Name
            </h5>
            <p class="card-text">
                <b>@Product?.Price.ToString("C")</b>
            </p>
        </div>
    </div>
</a>

@code {
    [Parameter]
    public Product? Product { get; set; }
}
